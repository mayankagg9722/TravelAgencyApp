                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:text="AC" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:gravity="center"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#000000"
                            android:padding="5dp"
                            android:text="Car Size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:text="Mini" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Slot Price" />

                    <TextView
                        android:gravity="right"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:text="INR 1800.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Service Tax" />

                    <TextView
                        android:gravity="right"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:text="INR 180.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Luxury Tax" />

                    <TextView
                        android:gravity="right"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:text="INR 126.00" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Extras" />

                    <TextView
                        android:gravity="right"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:text="INR 0.00" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textColor="#FFA500"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:text="TOTAL"
                        android:textSize="28dp"/>

                    <TextView
                        android:gravity="right"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#FFA500"
                        android:padding="5dp"
                        android:text="INR 2106.00"
                        android:textSize="28dp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thank You for Having Us."/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CC8400"
            android:textColor="#FFFFFF"
            android:text="BOOK NOW" />

    </LinearLayout>

</ScrollView>
