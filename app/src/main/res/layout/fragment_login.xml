<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayank.travelagentproject.Login"
    android:background="#fffde7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="LOG IN"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <EditText
                    android:singleLine="true"
                    android:inputType="textWebEmailAddress"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:id="@+id/email"/>
                <LinearLayout
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="290dp"
                        android:inputType="textWebPassword"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:id="@+id/password"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:id="@+id/eye"
                        android:src="@drawable/eye"
                        android:layout_gravity="right" />
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Login"
                    android:textColor="#ffffff"
                    android:id="@+id/login"
                    android:background="@color/myactionbarcolor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Forget Password?"
                    android:textSize="15dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/forget" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="15dp"
        android:text="OR"
        android:textSize="25dp"
        android:textStyle="italic|bold"
        android:id="@+id/textView3"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login with Google"
        android:id="@+id/googlelogo"
        android:layout_marginTop="20dp"
        android:textSize="10dp"
        android:drawableLeft="@drawable/common_google_signin_btn_icon_light"
        android:textStyle="italic"
        android:background="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/facebooklogo"
        android:layout_alignEnd="@+id/facebooklogo" />


         <com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebooklogo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/googlelogo"
        android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>